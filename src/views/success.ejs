<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Muvaffaqiyat</title>
    <link rel="stylesheet" href="/styles/suc.css">
</head>
<body>
    <div class="navbar">
        <div class="navbar-left">
            <div class="user-info">
                <!-- Foydalanuvchi fotosurati va nomi -->
                <img src="/uploads/userimage/<%= user.photo %>" alt="Profil rasmi" class="profile-image">
                <span class="username">Xush kelibsiz, <%= user.username %>!</span>
            </div>
        </div>
        <div class="navbar-right">
            <ul class="nav-links">
                <li><a href="https://kun.uz">Biz haqimizda</a></li>
                <li><a href="/login" class="logout">Chiqish</a></li>
            </ul>
        </div>
    </div>
    <div class="content">
        <div class="balance-section">
            <h2>Joriy balans</h2>
            <p class="balance-amount">$<%= user.balance %></p>
        </div>

        <!-- Tranzaksiya xabarlari -->
        <div class="messages">
            <% if (messages && messages.error) { %>
                <p class="error-message"><%= messages.error %></p>
            <% } %>
            <% if (messages && messages.success) { %>
                <p class="success-message"><%= messages.success %></p>
            <% } %>
        </div>
        <div class="transactions">
            <h3>Tranzaktsiyalar</h3>
            <ul class="transaction-list">
                <!-- Tranzaksiya ro'yxatini dinamik tarzda chiqarish -->
                <% transactions.forEach(transaction => { %>
                    <li class="transaction-item">
                        <span class="type <%= transaction.type %>"><%= transaction.type.charAt(0).toUpperCase() + transaction.type.slice(1) %></span> - <%= new Date(transaction.date).toLocaleDateString() %> - $<%= transaction.amount.toFixed(2) %>
                    </li>
                <% }); %>
            </ul>
        </div>

        <!-- Qo'shimcha amallar -->
        <div class="actions">
            <div class="action-card transfer">
                <h3>Pul o'tkazish</h3>
                <form action="/transfer?id=<%= user.id %>" method="POST">
                    <input type="text" name="transferTo" placeholder="Karta raqami" required>
                    <input type="number" name="amount" placeholder="Miqdor" required>
                    <button type="submit">O'tkazish</button>
                </form>
            </div>
            <div class="action-card loan">
                <h3>Kredit so'rash</h3>
                <form action="/request-loan" method="POST">
                    <input type="number" name="amount" placeholder="Miqdor" required>
                    <button type="submit">So'rash</button>
                </form>
            </div>
            <div class="action-card phone-payment">
                <h3>Telefon raqamga to'lov qilish</h3>
                <form action="/make-payment" method="POST">
                    <input type="text" name="phoneNumber" placeholder="Telefon raqami" required>
                    <input type="number" name="amount" placeholder="Miqdor" required>
                    <button type="submit">To'lov qilish</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
